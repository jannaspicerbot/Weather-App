# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Explicitly declare text files to ensure consistent line endings across all platforms
*.py text eol=lf
*.pyi text eol=lf
*.pyw text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.cfg text eol=lf
*.ini text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.less text eol=lf
*.xml text eol=lf
*.svg text eol=lf
*.sh text eol=lf
Makefile text eol=lf
Dockerfile text eol=lf

# Denote binary files that should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.ttf binary
*.woff binary
*.woff2 binary
*.eot binary
*.db binary
*.duckdb binary
*.exe binary
